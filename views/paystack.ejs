<%- include("layouts/header")  -%>


<form name="myForm" action="/paystack/pay" method="POST" >
  <div class="form-group">
      <label for="">Name</label>
      <input type="text" name="name" class="form-control" required max="20" min="3" placeholder="Name"/>
  </div>

  <div class="form-group">
      <label for="">Email</label>
      <input type="email" name="email" class="form-control" required placeholder="email"/>
  </div>

  <div class="form-group">
      <label for="">Amount</label>
      <input type="text" name="amount" class="form-control" required max="20" min="3" value="<%= total %>"  />
  </div>


  <button type="submit" class="btn btn-primary">Pay</button>
</form>



  <%- include("layouts/footer") -%>