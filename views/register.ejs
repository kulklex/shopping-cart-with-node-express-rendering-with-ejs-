<%- include("layouts/header")  -%>


<h1><%= title %></h1>

<form method="post" action="/users/register">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" name="name" class="form-control"  max="20" min="3" placeholder="Name"/>
    </div>

    <div class="form-group">
        <label for="">Email</label>
        <input type="email" name="email" class="form-control"  placeholder="email"/>
    </div>

    <div class="form-group">
        <label for="">Username</label>
        <input type="text" name="username" class="form-control"  max="20" min="3"  placeholder="Username"/>
    </div>

    <div class="form-group">
        <label for="">Password</label>
        <input type="password" name="password" class="form-control" max="20" min="6" placeholder="Password"/>
    </div>

    <div class="form-group">
        <label for="">Confirm Password</label>
        <input type="password" name="password2" class="form-control" max="20" min="6"  placeholder="Confirm Password"/>
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>


<%- include("layouts/footer") -%>
